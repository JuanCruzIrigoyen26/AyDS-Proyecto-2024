                <li><a href="/login">Cerrar Sesión</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section class="wrapper">
            <h2>Perfil</h2>
            <img src="<%= url('profile.png') %>" alt="Imagen de Usuario">
